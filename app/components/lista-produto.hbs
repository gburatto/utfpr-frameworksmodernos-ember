<h3>Lista de Produtos</h3>
<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th scope="col">Preço</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each this.produtos as |produto|}}
    <tr>
      <th scope="row">{{produto.id}}</th>
      <td>{{produto.nome}}</td>
      <td>{{produto.descricao}}</td>
      <td>R$ {{produto.preco}}</td>
      <td><button {{on "click" (fn this.editar produto.id)}} type="button" class="btn btn-secondary">Editar</button></td>
      <td><button {{on "click" (fn this.excluir produto.id)}} type="button" class="btn btn-danger">Excluir</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
